loopFlag = True
validDiceInput = [1, 2, 3, 4, 5, 6]
defEmptySpace = '         '
playerIndex = 0;
maxPlayer = 4;
playerList = ['A', 'B', 'C', 'D']
playerCount = maxPlayer
winnerList = []

def getDiceInput() :
    return int(input('Enter DICE Input for player_'+playerList[playerIndex]+' : '))

def printMsg(printMsg) :
    print(defEmptySpace+printMsg)

def updateIndex() :
    global playerIndex
    global maxPlayer
    playerIndex = playerIndex + 1
    if playerIndex == maxPlayer :
        playerIndex = 0;
        
def updateWinnerList() :
    global loopFlag
    winnerList.append(playerList[playerIndex])
    if (len(winnerList)) == playerCount :
        loopFlag = False

def checkDiceInput(userInput) :
    global playerIndex
    global maxPlayer
    if userInput == 1 :
        updateWinnerList()
        printMsg('winnerList = '+str(winnerList))
        del playerList[playerIndex]
        maxPlayer = maxPlayer - 1
        if playerIndex == maxPlayer :
            playerIndex = 0
    else :
        updateIndex()

def programMain() :
    while loopFlag :
        userInput = getDiceInput()
        if userInput in validDiceInput :
            checkDiceInput(userInput)
        else :
            printMsg(str(userInput)+' IS NOT A VALID DICE INPUT')

programMain()
printMsg('<========GAME OVER=======>')
printMsg('Winner - 1  ==> player_'+winnerList[0])
printMsg('Winner - 2  ==> player_'+winnerList[1])
printMsg('Winner - 3  ==> player_'+winnerList[2])
printMsg('Winner - 4  ==> player_'+winnerList[3])
